#!/bin/bash

# Font
FONT="-xos4-terminus-medium-*-*-*-14-*-*-*-*-*-iso8859-2"

# Colors
NORMAL_BACKGROUND="#3f3f3f"
NORMAL_FOREGROUND="#dcdccc"
SELECTED_BACKGROUND="#f0dfaf"
SELECTED_FOREGROUND="#1e2320"

# Run dmenu:
dmenu_run -i -p "Run:" \
          -nb $NORMAL_BACKGROUND \
          -nf $NORMAL_FOREGROUND \
          -sb $SELECTED_BACKGROUND \
          -sf $SELECTED_FOREGROUND \
          -fn $FONT
