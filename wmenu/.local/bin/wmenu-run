#!/usr/bin/env bash

# Font
font="Iosevka Lambda 15"

# Colors
normal_background="#1d1f21"
normal_foreground="#969896"
selected_background="#81a2be"
selected_foreground="#1d1f21"

# Change prompt if necessary
if [[ -z $1 ]]; then
    prompt="Run:"
else
	prompt="$1"
fi

# Default options
wmenu_opts=(-i -p "$prompt"
            -N "$normal_background"
            -n "$normal_foreground"
            -S "$selected_background"
            -s "$selected_foreground"
            -f "$font")

# Run wmenu
dmenu_path | wmenu "${wmenu_opts[@]}" | xargs swaymsg exec --
