/* -*- mode: css; -*-
 * vertical dmenu ROFI Color theme
 */

* {
  background-color: #1d1f21;
  text-color: #c5c8c6;
}

#window {
  anchor: south;
  location: south;
  width: 100%;
  children: [ vertbox ];
}

#vertbox {
  background-color: #373b41;
  border: 2px;
  border-color: #969896;
  orientation: vertical;
  spacing: 2px;
  children: [ prompt, entry, listview ];
}

#prompt {
  background-color: #969896;
  text-color: #1d1f21;
}

#entry {
  expand: false;
}

#listview {
  layout: vertical;
  fixed-height: false;
  lines: 10;
}

#element {
  padding: 2px 2px;
}

#element selected {
  background-color: #f0c674;
  text-color: #1d1f21;
}
