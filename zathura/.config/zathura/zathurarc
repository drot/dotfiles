# -*- mode: Conf -*-

# Default font
set font "Cascadia Mono 12"

# Display filename as title
set window-title-basename "true"

# More natural scrolling
set scroll-full-overlap 0.1

# Interface colors
set default-bg "#1d1f21"
set default-fg "#282a2e"

set statusbar-fg "#b4b7b4"
set statusbar-bg "#282a2e"

set inputbar-bg "#1d1f21"
set inputbar-fg "#c5c8c6"

set notification-error-bg "#cc6666"
set notification-error-fg "#1d1f21"

set notification-warning-bg "#cc6666"
set notification-warning-fg "#1d1f21"

set highlight-color "#f0c674"
set highlight-active-color "#81a2be"

set index-active-bg "#81a2be"

set completion-highlight-fg "#373b41"
set completion-highlight-bg "#8abeb7"

set completion-bg "#373b41"
set completion-fg "#8abeb7"

set notification-bg "#b5bd68"
set notification-fg "#1d1f21"

# Recolor colors
set recolor-lightcolor "#1d1f21"
set recolor-darkcolor "#e0e0e0"
set recolor-keephue "true"

# Emulate Emacs keybindings
map f navigate next
map b navigate previous

map e follow

map <C-g> abort

map <C-+> zoom in
map <C--> zoom out

map <C-=> adjust_window best-fit
map <C-0> adjust_window width

map <C-a> scroll full-left
map <C-b> scroll left
map <C-e> scroll full-right
map <C-f> scroll right

map <C-n> scroll down
map <C-p> scroll up

map <C-v> scroll full-down
map <A-v> scroll full-up

map <A-\<> goto top
map <A-\>> goto bottom
map \< goto top
map \> goto bottom
