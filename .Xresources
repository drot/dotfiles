! Cursor
Xcursor.theme: Adwaita

! Emacs
Emacs.font: Terminus-10
Emacs.background: #3F3F3F
Emacs.menuBar: off
Emacs.toolBar: off
Emacs.verticalScrollBars: off

! URXVT
! General
URxvt.urgentOnBell: true
URxvt.internalBorder: 0
URxvt.saveLines: 65535

! Release Ctrl/Shift bindings
URxvt.iso14755: false
URxvt.iso14755_52: false

! Scrolling
URxvt.scrollBar: false
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

! Mouseless URL selection
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher: conkeror
URxvt.url-select.underline: true
URxvt.matcher.button: 1
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! Font
URxvt.font: -xos4-terminus-medium-*-*-*-14-*-*-*-*-*-iso8859-2
URxvt.boldFont: -xos4-terminus-bold-*-*-*-14-*-*-*-*-*-iso8859-2

! Colors
URxvt.background: #3F3F3F
URxvt.foreground: #DCDCCC

URxvt.cursorColor: #DCDCCC
URxvt.cursorColor2: #3F3F3F

URxvt.colorUL: #8CD0D3
URxvt.underlineColor: #F0DFAF

URxvt.colorBD: #E0CF9F
URxvt.colorIT: #656555

! Black Dark/Light
URxvt.color0: #3F3F3F
URxvt.color8: #5F5F5F
! Red Dark/Light
