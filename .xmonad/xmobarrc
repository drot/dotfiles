		    , Run Network "eth0" ["-t","Net: <rx><fc=#B6DCFF>/</fc><tx>","-L","5","-H","100","--low","#FFFFCC","--normal","#CEFFAC","--high","#FFB6B0"] 10
                    , Run Date "%a %b %_d<fc=#FFFFCC> %H:%M</fc>" "date" 10 
		    , Run Com "sh" ["~/.xmonad/mpd.sh"] "mpd" 10
                    ]
       , sepChar = "%"
