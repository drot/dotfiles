# Turn off the startup message
startup_message off

# Disable visual bell
vbell off

# Unicode by default
defutf8 on

# Disable blockage
nonblock on

# Increase scrollback value
defscrollback 10000

# Enable 256 colors
term screen-256color

# Enable alternate screen
altscreen on

# Start window numbering at 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# Statusline
rendition so Wk
hardstatus alwayslastline "%{G}[ %{Y}%H %{G}][%{w}%?%-Lw%?%{G}(%{W}%n*%f %t%?(%u)%?%{G})%{w}%?%+Lw%?%?%= %{G}][%{Y} %H %{G}]"
