# Turn off startup message
startup_message off

# Visual bell off
vbell off

# Residual text fix
altscreen on

# Dynamic window title
shelltitle '$ |bash'

# 256 color support
term screen-256color
terminfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# Status bar and title
hardstatus alwayslastline '%{= M} %H%{= B} %l %= %{= w}%-w%{+b G}%n*%t%{-b G}%{w}%+w %= %{B}%d-%m %{M}%c '
