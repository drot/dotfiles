# Turn off startup message
startup_message off

# Detach on hangup
autodetach on

# Visual bell off
vbell off

# Ignore frozen windows
nonblock on

# Residual text fix
altscreen on

# utf-8 encoding
defutf8 on

# 256 color support
term screen-256color

# fix scrolling
termcapinfo rxvt* ti@:te@:XT

# Mode line
sorendition Wk
hardstatus alwayslastline "%{G}[ %{B}%H %{G}][%{w}%?%-Lw%?%{G}(%{W}%n*%f %t%?(%u)%?%{G})%{w}%?%+Lw%?%?%= %{G}][%{B} %H %{G}]"
